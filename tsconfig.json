{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "types": ["node", "jest"],
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": false,
        "incremental": false
    },
    "include": ["backend/**/*.ts", "backend/**/**/*.ts"],
    "exclude": [
        "node_modules",
        "dist",
        "frontend",
        "kubernetes",
        "**/*.test.ts",
        "**/__tests__/**",
        "**/*.spec.ts"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    }
}
