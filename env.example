# =====================================
# MERN FitVerse Environment Variables
# =====================================
# Copy this file to .env and update the values for your environment

# =====================================
# Database Configuration
# =====================================
# MongoDB connection string
# Local MongoDB: mongodb://localhost:27017/fitverse
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/fitverse
MONGODB_URI=mongodb://localhost:27017/fitverse

# =====================================
# Application Configuration
# =====================================
# Application environment (development, staging, production)
NODE_ENV=development

# Backend server port
PORT=5003

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# =====================================
# Authentication & Security
# =====================================
# JWT secret key for token signing (use a strong, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-generate-a-strong-random-string

# JWT token expiration time (7d, 24h, 30m, etc.)
JWT_EXPIRES_IN=7d

# bcrypt salt rounds (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=10

# =====================================
# Email Service (Optional)
# =====================================
# Email service for notifications and password reset
# Use Gmail, SendGrid, AWS SES, or other SMTP providers
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=FitVerse <noreply@fitverse.com>

# SendGrid API Key (alternative to SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key

# =====================================
# File Upload & Storage (Future)
# =====================================
# AWS S3 configuration for profile pictures and media
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=fitverse-uploads
# AWS_REGION=us-east-1

# Cloudinary configuration (alternative to S3)
# CLOUDINARY_CLOUD_NAME=your-cloudinary-name
# CLOUDINARY_API_KEY=your-cloudinary-key
# CLOUDINARY_API_SECRET=your-cloudinary-secret

# =====================================
# External APIs (Future Integration)
# =====================================
# Nutrition API (e.g., Edamam, Spoonacular)
# NUTRITION_API_KEY=your-nutrition-api-key
# NUTRITION_API_URL=https://api.edamam.com

# Fitness API (e.g., Exercise DB, Fitness Calculator)
# FITNESS_API_KEY=your-fitness-api-key
# FITNESS_API_URL=https://exercisedb.p.rapidapi.com

# =====================================
# Monitoring & Analytics (Production)
# =====================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXX-X

# =====================================
# Rate Limiting & Security
# =====================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# =====================================
# Development & Debugging
# =====================================
# Enable debug logging
DEBUG=fitverse:*

# Enable detailed error messages (development only)
DETAILED_ERRORS=true

# Database query logging
DB_LOGGING=false

# =====================================
# Docker & Deployment
# =====================================
# Docker registry (for CI/CD)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-username
DOCKER_IMAGE_NAME=mern-fit-verse

# Kubernetes namespace
K8S_NAMESPACE=fitverse

# =====================================
# CI/CD & DevOps
# =====================================
# SonarQube configuration
SONAR_HOST_URL=http://localhost:9000
SONAR_PROJECT_KEY=FitVerse
SONAR_TOKEN=your-sonarqube-token

# Jenkins webhook URL
JENKINS_WEBHOOK_URL=http://your-jenkins:8080/job/mern-fit-verse/build

# =====================================
# Health Check & Monitoring
# =====================================
# Health check endpoint interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Application metrics port
METRICS_PORT=9090

# =====================================
# Example Values for Quick Start
# =====================================
# For local development, you can use these example values:
# NODE_ENV=development
# PORT=5003
# MONGODB_URI=mongodb://localhost:27017/fitverse
# JWT_SECRET=dev-secret-key-change-in-production
# JWT_EXPIRES_IN=7d
# FRONTEND_URL=http://localhost:5173