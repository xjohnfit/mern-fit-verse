{
    "name": "mern-fit-verse",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "frontend": "npm run dev:host --prefix frontend",
        "backend": "nodemon --exec ts-node ./backend/index.ts",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "start": "ts-node ./backend/index.ts",
        "start:prod": "node dist/backend/index.js",
        "build": "tsc",
        "build:frontend": "cd frontend && npm run build",
        "build:full": "npm run build && npm run build:frontend",
        "test": "echo 'No tests specified yet' && exit 0",
        "test:backend": "echo 'No backend tests specified yet' && exit 0",
        "test:watch": "echo 'No test watch mode specified yet' && exit 0",
        "lint": "echo 'No backend linting configured yet' && exit 0",
        "lint:fix": "echo 'No backend lint fix configured yet' && exit 0",
        "clean": "rimraf dist coverage",
        "prestart:prod": "npm run build",
        "health-check": "curl -f http://localhost:5003/health || exit 1"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "concurrently": "^9.2.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.19.2"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
